	;---------------------------------------
	; to be replaced/removed (once my CS/A ROM auto-detects speed and sets CRTC correctly)
	.(
	lda mode
	and #MODE_2MHZ+MODE_CSA
	cmp #MODE_2MHZ+MODE_CSA
	bne slow1

	; set CRTC and video
	ldy #$00
l1008	sty $e880
	lda l1150,y	; set CRTC parameters for 2MHz 80 col
	sta $e881
	iny
;	cpy #$12
	cpy #3
