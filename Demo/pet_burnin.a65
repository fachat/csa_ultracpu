	; all machines
l1193	lda #$60	; disable 8x96 mapping
	sta $fff0

	; init cycles counter
	lda #$00
	sta cycles
	sta cycles+1
	sta cycles+2

	; init start of screen for chrout
	jsr iniscr

	; ------------------------------
	; clear screen
	lda #$93
	jsr chrout	; l742

	; ------------------------------
	; output banner message
	.(
	lda mode
